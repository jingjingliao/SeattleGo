<%- include("../partials/header") %>
<!-- regular CSS -->
<link rel="stylesheet" href="/stylesheets/new.css" />

<div class="createNew-page">
  <div class="form">
    <form
      action="/travelplaces/<%= foundPlace._id %>?_method=PUT"
      method="POST"
      class="createNew-form"
    >
      <h1 class="mb-4">Edit <%= foundPlace.name %></h1>
      <input
        type="text"
        name="travelPlace[name]"
        value="<%= foundPlace.name %>"
        placeholder="name"
      />
      <input
        type="text"
        name="travelPlace[image]"
        id="image"
        value="<%= foundPlace.image %>"
        placeholder="image url"
      />

      <textarea
        class="description"
        type="text"
        name="travelPlace[description]"
        id="description"
        placeholder="description"
        style="width: 100%;"
        rows="5"
      >
<%= foundPlace.description %></textarea
      >

      <button>Submit</button>

      <p class="message">
        <a href="/travelplaces/<%= foundPlace._id %>">Go Back</a>
      </p>
    </form>
  </div>
</div>
